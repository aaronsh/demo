<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayout1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/bottom_menu_bg_bar" />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bottom_menu_bg_body"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/bottom_menu_home"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight=".25"
            android:src="@drawable/home" />

        <ImageView
            android:id="@+id/bottom_menu_company"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight=".25"
            android:src="@drawable/about" />

        <ImageView
            android:id="@+id/bottom_menu_contact_us"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight=".25"
            android:src="@drawable/contactus" />

        <ImageView
            android:id="@+id/bottom_menu_weibo"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight=".25"
            android:src="@drawable/weibo" />

        <ImageView
            android:id="@+id/bottom_menu_refresh"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight=".25"
            android:src="@drawable/back"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/bottom_menu_back"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight=".25"
            android:src="@drawable/back" />
    </LinearLayout>

</LinearLayout>